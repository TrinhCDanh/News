@import 'typographic'
@import 'nib'

bluegrey1 = #90A4AE //#90A4AE #37474F 
bluegrey = #eeeeee //#ECEFF1 #CFD8DC #263238
bluegreys = #1d272b
boycoy = #f15d58
gold = #ffd700
teal = #27a89f
text = #e5fbfb
scale = 0 400px 600px 800px 1050px 1080px

*
	padding 0
	margin 0
	box-sizing border-box
html
body
	height 100%
	background-color bluegrey
a
	text-decoration none
ul
	list-style-type none

.col-1 
	width 8.33%
.col-2 
	width 16.66%
.col-3 
	width 25%
.col-4 
	width: 33.33%
.col-5 
	width: 41.66%
.col-6 
	width: 50%
.col-7 
	width: 58.33%
.col-8 
	width: 66.66%
.col-9 
	width: 75%
.col-10 
	width: 83.33%
.col-11 
	width: 91.66%
.col-12 
	width: 100%

::-webkit-scrollbar
	width 5px
	height 5px
::-webkit-scrollbar-track
	background-color rgba(black,.5)
::-webkit-scrollbar-thumb
	background teal;
::selection
	background rgba(teal,0.5)
.wrapper
	height 100%
	width 100%
	display flex
	flex-flow wrap
	margin-bottom 0
	> *
		width 100%
		font-family 'Signika', sans-serif
	~ div
		width 0
.nav 
	fixed top
	width 100%
	z-index 100
	transition background-color 0.25s
	border-bottom 1px solid #999
	#menubar
		height 70px
		position relative
		padding 0 15px
		.menubar-select
			display flex
			justify-content space-between
			width 100%
			height 70px
			padding 0 15px
		[class$='desc']
			color text
			opacity 0
			font-size 20px
			transition all 0.25s linear
		.menubar-content
			align-self center
			display inline-block
			cursor pointer
			position relative
			z-index 104
			.nav-desc
				absolute top 25% left 110%
			.bar1
			.bar2
			.bar3
				width 35px
				height 5px
				background-color text
				margin 6px 0
				transition .5s
			&:hover
				.nav-desc
					left 130%
					opacity 1
		.change
			.bar1
				transform rotate(-45deg) translate(-9px, 6px)
			.bar2
				opacity 0 
			.bar3
				transform	rotate(45deg) translate(-8px, -8px)
		.menubar-name
			font-size 25px
			line-height 70px
			color text
			display block
			padding 0 5px
			position relative
			display flex
			cursor pointer
			align-items center
			.menubar-name-content
				font-size 1.5em
				margin-left 10px
		.menubar-search
			align-self center
			cursor pointer
			position relative
			i
				color text
				font-size 35px
				transition all 0.25s
			.fa-remove
				absolute top 0 left 0
				opacity 0 
				transition all 0.25s	
			.search-desc
				absolute top 25% right 110%
			&:hover 
				.search-desc	
					right 130%
					opacity 1
		.search-form	
			absolute top 100% left 0
			transition all .5s
			width 100%
			overflow hidden
			height 0 
			input 
				width 100%
				height 100%	
				font-size 30px
				padding 0 10px
				background-color bluegrey1
				color text
				border none
				outline none
	#menucontent
		width 100%
		height 0 
		background-color bluegrey
		fixed bottom 0px left
		transition all .8s ease
		border-radius 0 0 30% 30%
		transform scale(0,1)
		overflow hidden
		z-index 103		
.fixed
.nav1
	background-color #202b30 //bluegreys
	border-bottom none

.parallax-header
	margin-top 70px
	background-image url('../images/banner4.jpg')
	height 50%
	background-attachment scroll
	background-repeat no-repeat
	background-size cover
	background-position center
	.header-title
		height 100%
		font-size 90px
		background-color rgba(#263238,0.6)
		color text
		display flex
		align-items center
		justify-content center
.check-views 
	display flex
	justify-content center
	flex-flow wrap
	padding 10px 0
.btn 
	position relative
	display inline-block
	width 166px
	height 45px
	font-size 18px
	line-height 45px
	text-align center
	/*text-transform: uppercase;*/
	color #1d272b
	cursor pointer
	overflow hidden
	margin 5px
	svg 
		position absolute
		top 0
		left 0
		rect 
			stroke #1d272b
			stroke-width 6
			stroke-dasharray 422, 0
			stroke-dashoffset 0
			transition all 900ms cubic-bezier(0.19, 1, 0.22, 1)
	&:hover 
		svg 
			rect 
				stroke teal
				stroke-width 10
				stroke-dasharray 110, 312
				stroke-dashoffset 183

/* ---- grid ---- */

.grid-sizer
.grid-item 
	width 100%
	padding 1px
	z-index 2

.grid-content 
.sidebar-content
	background-color bluegrey1
	position relative
	overflow hidden  

.grid-content 
	animation foo 0.5s


.grid-content * 
.sidebar-content * 
	transition: all 0.5s

.grid-item img 
.sidebar-item img 
	display block
	max-width 100%
	opacity 0.7


.post-title
	padding 10px
	width 100%   
	absolute bottom 0 left 0
	background-color bluegrey1
	text-align center
	a 
		color #263238 //white
		font-size 20px
	
.material-icons 
	absolute bottom 10px right 5px
	color white
	opacity 0
	z-index 1


.grid-item
	&:hover 
		.material-icons 
			opacity 1
			right 0


.link 
	outline none
	position relative
	font-size 8em
	overflow hidden
	line-height 1
	color #9e9ba4
	display inline-block


.link--paracvet 
	font-weight 900
	color #b2b0a9
	width 100%
	&:hover 
		color: #455A64//#b2b0a9
	&::after 
		content ''
		absolute top 50% right
		height 16px
		width 100%
		margin-top -8px
		background #263238 //#F9F9F9
		transform translate3d(-100%,0,0)
		transition transform 0.4s
		transition-timing-function cubic-bezier(0.7,0,0.3,1)

.link--paracvet:hover::after 
	transform: translate3d(100%,0,0)

/* ---- Pagination ---- */
.pagination 
	.pagination-pages 
		text-align center
		margin 50px 0
		ul 
			li 
				display inline-block
				width 50px
				height 50px
				font-size 20px
				margin 0 3px
				color #000
				position relative
				overflow hidden
				line-height 50px
				text-align center
				z-index 1
				transition all 0.5s
				&:hover  
					border-radius 50%
				&:after 
					transition all 0.5s ease
					background-color teal
					transform: rotate(45deg) scale(1.6, 1)
				&:hover:after
					transform: rotate(0deg) scale(1, 1);

.footer
	background-color #263238 //#141c1f
	height 400px

/* ---- Copyrights ---- */
.copyrights 
	background-color #202b30//#11181a
	display flex
	flex-flow wrap
	> * 
		flex 1 100%
		text-align center
		display flex
		align-self center
		justify-content center
		padding 25px 0
	.copyrights-left
		color text
	.copyrights-right 
		.fa 
			position relative
			width 40px
			height 40px 
			text-align center
			line-height 40px 
			margin-left 5px 
			color white
			font-size 20px
			z-index 10
			transition 0.5s
			cursor pointer
			&:hover
				transform rotate(360deg)
				border-radius 50%
		.fa-facebook-f 
			background-color #3b5998;
		.fa-youtube-play 
			background-color #cc181e
		.fa-google-plus 
			background-color #d34836
			
/* ---- back to top ---- */
#return-to-top 
	fixed bottom 20px right 20px
	background-color rgba(teal,0.5)
	width 45px
	height 45px
	display none
	display flex
	justify-content center
	transition background-color 0.3s ease
	z-index 3
	i 
		color #000
		align-self center
		font-size 30px
		transition all 0.3s ease
	&:hover 
		background-color teal
		i 
			margin-top -10px


@media only screen and (max-device-width: 1024px)
	.parallax-header
		background-attachment scroll
		height auto
		margin-top 70px
		.header-title
			font-size 50px
			padding 40px
			text-align center
			
@media only screen and (min-width: 600px) 
	.grid-sizer
	.grid-category .grid-item 
	.list-games .list-games-box 
		width 50%
  
@media only screen and (min-width: 1280px) 
	.grid-sizer
	.grid-category .grid-item
	.list-games .list-games-box 
		width 33.33%
	.copyrights > * 
		flex 1 50%
  
  
.banner .banner-name::after
.pagination .pagination-pages ul li:after
.copyrights-right .fa:after
	content ""
	width 100%
	height 100%
	absolute top left
	z-index -1


